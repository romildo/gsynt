category:            Teaching
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable gsynt
  main-is:             Main.hs
  hs-source-dirs:      src
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.11
                     , HaTeX >= 3.14.0.0
                     , mtl >= 2.2.1
                     , parsec >= 3.1.7
                     , transformers >= 0.3.0.0
                     , ipprint >= 0.5
                     , text
  -- hs-source-dirs:      
  default-language:    Haskell2010
  ghc-options:         -Wall
                       -fno-warn-unused-do-bind
                       -fno-warn-unused-binds
                       -fno-warn-name-shadowing
